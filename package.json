{
  "name": "react-router-infer",
  "description": "Type-safe wrappers for react-router-dom",
  "version": "0.2.1",
  "license": "MIT",
  "author": "haivuw",
  "type": "module",
  "homepage": "https://github.com/haivuw/react-router-infer",
  "repository": {
    "type": "git",
    "url": "https://github.com/haivuw/react-router-infer"
  },
  "keywords": [
    "react",
    "router",
    "react-router",
    "typescript",
    "type-safe"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^14.12.0",
    "@size-limit/preset-small-lib": "^11.1.4",
    "@testing-library/react": "^15.0.7",
    "@types/react": "^18.3.3",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "bun-types": "latest",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "prettier": "^3.2.4",
    "prettier-plugin-jsdoc": "^1.3.0",
    "size-limit": "^11.1.4",
    "tsup": "^8.1.0",
    "typedoc": "^0.25.13",
    "typedoc-plugin-markdown": "^4.0.3",
    "typescript": "^5.4.5",
    "zod": "^3.23.8"
  },
  "peerDependencies": {
    "react": ">=16.14.0",
    "react-router-dom": ">=6.0.0"
  },
  "scripts": {
    "type": "tsc --noEmit",
    "lint": "eslint .",
    "prettier.check": "prettier --list-different .",
    "build": "tsup",
    "test": "bun test",
    "test:register": "cd test/register && tsc --noEmit",
    "size": "size-limit",
    "docs": "typedoc --options typedoc.json"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "2 KB"
    }
  ]
}
